@page
@model AspdotnetCoreSecurityAuthenticationAuthorizationIdentity.Pages.Account.LoginModel
@{

}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="Credential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Username" class="form-control"/>
            </div>
            <span asp-validation-for="Credential.Username" class="text-danger"></span>
           
        </div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                 <input type="text" asp-for="Credential.Password" class="form-control"/>
            </div>
                <span asp-validation-for="Credential.Password" class="text-danger"></span>
        </div>

         <div class="row form-check mb-3">
            <div class="col-2">
                    <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input"/>
                    <label asp-for="Credential.Password" class="form-check-label"></label>
            </div>
            <div class="col"></div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-2">
               <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">
                 
            </div>

        </div>
    </form>
</div>